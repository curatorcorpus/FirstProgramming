package Coin;

public class Coin {
	protected final int HEADS = 0; 
	protected int face;
	
	/** constructor method */
	public Coin(){
		flip();
	} // constructor ends
	
	/** method to flip a coin */
	public void flip(){
		face = (int) (Math.random() * 2);
	} // method ends
	
	/** returns if flipped coin is heads */
	public boolean isHeads(){
		return (face == HEADS);
	} // method ends
}
