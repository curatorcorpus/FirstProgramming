import javax.swing.*;
import java.awt.*;

public class Pie extends JFrame{
    
    /**creates  an instance of Pie called chart1*/
    public static void main(String[]args){
        Pie chart1 = new Pie(); 
        chart1.setSize(300,220);
        chart1.setVisible(true);
    }
    
    /**all drawing code goes in the paint method, which is called automatically*/
    public void paint (Graphics page){
        // variable declaration
    	final int X_POSITION = 85;
    	final int Y_POSITION = 60;
    	final int WIDTH_HEIGHT = 125;
    	final int ARC_ANGLE = 45;
    	
    	// graphic name
    	setTitle("Pie");
    	
    	// canvas
    	page.setColor(Color.white);
        page.fillRect(0,0,300,220);
        
        //your pie chart code starts here\
        // 1st arc
        page.setColor(Color.red);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 45, 45);
        
        // 2nd arc
        page.setColor(Color.orange);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 90, 45);
        
        // 3rd arc
        page.setColor(Color.yellow);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 135, 45);
        
        // 4th arc
        page.setColor(Color.cyan);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 180, 45);
        
        // 5th arc
        page.setColor(Color.blue);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 225, 45);
        
        // 6th arc
        page.setColor(Color.green);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 270, 45);
        
        // 7th arc
        page.setColor(Color.magenta);
        page.fillArc(X_POSITION, Y_POSITION, 125, 125, 315, 45);
        
        // translated arc
        page.setColor(Color.black);
        page.fillArc(X_POSITION + 5, Y_POSITION - 2, 125, 125, 0, 45);
        
    }
}