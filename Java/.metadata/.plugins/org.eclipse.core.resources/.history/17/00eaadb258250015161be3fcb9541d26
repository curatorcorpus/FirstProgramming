//GuessNumber.java

import java.util.Scanner;

public class GuessNumber {
	public static void main(String args[]){
		// variable declaration
		int answer;
		
		Scanner inputAnswer = new Scanner(System.in);
		
		System.out.println("Guess a number between 0 and 10: ");
		
		answer = inputAnswer.nextInt();
		
		// conditions
		if ( (3 < answer && answer < 5) || (5 < answer && answer < 8) ){
			System.out.println("Man you were so close to getting the number!");
		}
		else if (answer == 5){
			System.out.println("Bang on the money!");
		}
		else {
			System.out.println("You are so cold!");
		}
	}
}
