
public class PuppyRegistration {
	
	int puppyAge;
	
	public void Puppy(String name){
		//This constructor  has on parameter, name.
		System.out.println("Passed Name is: " + name);
	}
	
	public void setAge(int age){
		puppyAge = age;
	}
	
	public int getAge(){
		System.out.println("Puppy's age is: " + puppyAge);
		return puppyAge;
	}
	
	public static void main(String args[]){
		// Create Object
		PuppyRegistration Puppy = new Puppy("Teto");
		
		//Call class method to set puppy's age
		Puppy.setAge(3);
		
		//Call another class method to get puppy's age
		Puppy.getAge();
		
		//You can access instance variable asa follows as well
		System.out.println("Variable Value: " + Puppy.puppyAge);
	}
}
